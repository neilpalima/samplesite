            //        li
            //            a(href='#') Help
            //    form.navbar-form.navbar-right
            //        input.form-control(type='text', placeholder='Search...')
    .container-fluid
        .row
            .col-sm-3.col-md-2.sidebar
                ul.nav.nav-sidebar
                    li.active
                        a(href='#')
                            | Products
                            span.sr-only (current)
                    li
                        a(href='#') Soon
            //        li
            //            a(href='#') Analytics
            //        li
            //            a(href='#') Export
            .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                h2.sub-header List of products
                .table-responsive
                    table.table.table-striped(ng-controller='AppCtrl as ctrl')
                        thead
                            tr
                                th #
                                th Name
                                th Price(in php)
                                th Description
                        tbody(ng-init='ctrl.getProducts()')
                            tr(ng-repeat="itr in products")
                                td {{$index + 1}}
                                td {{itr.name}}
                                td {{itr.price}}
                                td {{itr.description}}

    script(src='js/lib/angular/angular.js')
    script(src='js/lib/angular/angular-route.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
    script(src='js/lib/jquery/jquery-2.0.3.min.js')
    script(src='bootstrap/js/bootstrap.min.js')
