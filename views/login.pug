extends layout
append styles
    // Custom styles for this template
    link(href='../css/signin.css', rel='stylesheet')
block body
    .container
        form.form-signin(method='POST' name='login' action='/users/signin')
            h2.form-signin-heading Please sign in #{error}
            if 1
                +alert-success("<strong>Well done!</strong> You successfully read this important alert message.")
            label.sr-only(for='inputEmail') Email address
            input#inputEmail.form-control(type='input', placeholder='Username', required='', autofocus='', name='username')
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control(type='password', placeholder='Password', required='', name='password')
            .checkbox
                label
                    input(type='checkbox', value='true', name='remember')
                    |  Remember me
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in


